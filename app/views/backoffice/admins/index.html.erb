<h1 class="page-header">Administradores</h1>

<div class="panel panel-default">
    <div class="panel-heading">
        Listando Admins
            
        	<%= link_to new_backoffice_admin_path,
            		type:"button", class:"btn btn-success btn-circle pull-right", style:"margin-top:-5px" do %>
            	<i class="fa fa-plus"></i>
        	<% end %>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>                                            
                    	<th>#</th>
                        <th>E-mail</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                	<% @admins.each do |admin| %>
                        <tr>
                        	<td style="width:50px; text-align:right"><%= admin.id%></td>                                        
                            <td><%= admin.email%></td>                                        
                            <td style="width:150px">
                            <%= link_to edit_backoffice_admin_path(admin),
                            	class:"btn btn-primary btn-circle" do %>
                            	<i class="fa fa-edit"></i>
                        	<% end %>
                            <% if current_admin.id != admin.id %>
                                <%= link_to backoffice_admin_path(admin),method: :delete, data: {confirm: "Deseja realmente remover: <b>#{admin.email}</b>?"},
                                    class:"btn btn-danger btn-circle" do %>                             
                                     <i class="fa fa-minus"></i>
                                 <% end %> 
                            <% else %>
                                <button type="button", disabled="disabled", class="btn btn-danger btn-circle"><i class="fa fa-minus"></i></button>
                             <% end %> 
        					</td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
        <!-- /.table-responsive -->
    </div>
        <!-- /.panel-body -->
<% if notice %>   
    <script>
        $.notify("<%= notice%>", "success");
    </script>    
<% end %>
</div>
<!-- /.panel -->