<h1 class="page-header">Administradores</h1>

<%if @admin.errors.any? %>                    
    <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
    <% @admin.errors.full_messages.each do |message| %>
        <%= message %>
    <% end %>    
    </div>
<% end %>

<div class="panel panel-default">
    <div class="panel-heading">
        <%= action %>
    </div>
    <!-- /.panel-heading -->
        <div class="panel-body">
            
            <%= form_for([:backoffice, @admin]) do |f| %>
            <div class="form-group">
                <label>Name</label>
                <%= f.text_field :name, class:"form-control", placeholder:"joao" %>
            </div>                       
            
            <div class="form-group">
                <label>E-mail</label>
                <%= f.text_field :email, class:"form-control", placeholder:"joao@gmail.com" %>                                      
            </div>
            <div class="form-group">
                <label>Password</label>
                <%= f.password_field :password, class:"form-control", placeholder:"senha" %>                                      
            </div>
            <div class="form-group">
                <label>Confirm password</label>
                <%= f.password_field :password_confirmation, class:"form-control", placeholder:"confirmação de senha" %>                                      
            </div>
            <button type="submit" class="btn btn-default">Salvar</button>
            <% end %>
        </div>                            
    </div>
    <!-- /.panel-body -->
</div>
<!-- /.panel -->